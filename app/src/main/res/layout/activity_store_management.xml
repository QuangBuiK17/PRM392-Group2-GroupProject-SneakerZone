<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Add Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:contentDescription="Add Store"
        android:src="@drawable/baseline_add_24" />

    <!-- RecyclerView for displaying stores -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_stores"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fab_add_store"
        android:padding="16dp" />

    <Button
        android:id="@+id/btn_manage_orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="Manage Store Orders"
        android:textColor="@android:color/white" />
</RelativeLayout>
